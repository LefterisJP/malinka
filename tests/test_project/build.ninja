cc     = gcc
cflags = -D_GNU_SOURCE -D_FILE_OFFSET_BITS=64 -DSTRING_VAL=\"malinka\" -I/nice/include/path/ -I/good/include/path -g -Wall
lflags = -lm

rule compile
  command = $cc $cflags -c $in -o $out

rule link
  command = $cc $in $lflags -o $out 

build foo.o: compile foo.c
build boo.o: compile boo.c
build goo.o: compile goo.c

default foo.o boo.o goo.o
